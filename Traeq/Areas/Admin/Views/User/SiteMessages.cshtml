@model IEnumerable<Traeq.Models.ContactUs>

@{
    ViewData["Title"] = "Site Messages";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2 class="h3 mb-0 text-gray-800">Site Messages</h2>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Subject</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var index = 0;
                            foreach (var item in Model)
                            {
                                // الرسالة مخزنة عندك بشكل "Phone: xxx\n\nالرسالة"
                                string phone = "";
                                string messageText = item.Message ?? "";
                                if (!string.IsNullOrEmpty(item.Message))
                                {
                                    var parts = item.Message.Split("\n\n");
                                    if (parts.Length > 0 && parts[0].StartsWith("Phone:"))
                                    {
                                        phone = parts[0].Substring("Phone:".Length).Trim();
                                        if (parts.Length > 1)
                                        {
                                            messageText = parts[1];
                                        }
                                        else
                                        {
                                            messageText = "";
                                        }
                                    }
                                }

                                var modalId = $"msgModal_{index}";
                                <tr>
                                    <td>@item.CreateDate?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@($"{item.NameFirst} {item.NameLast}")</td>
                                    <td>@item.Email</td>
                                    <td>@phone</td>
                                    <td>@item.Subject</td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-primary"
                                                data-bs-toggle="modal"
                                                data-bs-target="#@modalId">
                                            View
                                        </button>

                                        <div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Message from @($"{item.NameFirst} {item.NameLast}")</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p class="mb-1"><strong>Date:</strong> @item.CreateDate?.ToString("yyyy-MM-dd HH:mm")</p>
                                                        <p class="mb-1"><strong>Email:</strong> @item.Email</p>
                                                        @if (!string.IsNullOrEmpty(phone))
                                                        {
                                                            <p class="mb-3"><strong>Phone:</strong> @phone</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.Subject))
                                                        {
                                                            <p class="mb-2"><strong>Subject:</strong> @item.Subject</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(messageText))
                                                        {
                                                            <hr />
                                                            <p class="mb-0">@messageText</p>
                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No site messages found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
