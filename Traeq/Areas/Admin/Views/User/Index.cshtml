@model IEnumerable<Traeq.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="h3 mb-0 text-gray-800">User Management</h2>
        </div>
        <div class="col-md-4 text-end">
@*             <a asp-action="CreateAdmin" class="btn btn-primary shadow-sm">
                <i class="fa fa-plus"></i> Add New Admin
            </a>
        </div> *@
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#all">All Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#pharmacies">Pharmacies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#clients">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#admins">Admins</a>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">

                <div class="tab-pane fade show active" id="all">
                    @{
                        await RenderTable(Model);
                    }
                </div>

                <div class="tab-pane fade" id="pharmacies">
                    @{
                        await RenderTable(Model.Where(u => u.AccountType == "Pharmacy"));
                    }
                </div>

                <div class="tab-pane fade" id="clients">
                    @{
                        await RenderTable(Model.Where(u => u.AccountType == "User"));
                    }
                </div>

                <div class="tab-pane fade" id="admins">
                    @{
                        await RenderTable(Model.Where(u => u.AccountType == "Admin"));
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@{
    async Task RenderTable(IEnumerable<Traeq.Models.User> users)
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (users != null && users.Any())
                    {
                        foreach (var user in users)
                        {
                            <tr>
                                <td class="align-middle">@user.FullName</td>
                                <td class="align-middle">@user.UserName</td>
                                <td class="align-middle">@user.Email</td>
                                <td class="align-middle">
                                    @if (user.AccountType == "Admin")
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else if (user.AccountType == "Pharmacy")
                                    {
                                        <span class="badge bg-info text-dark">Pharmacy</span>
                                    }
                                    else if (user.AccountType == "Employee")
                                    {
                                        <span class="badge bg-warning text-dark">Employee</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Client</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info" title="View">
                                        <i class="fa fa-eye"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a asp-action="ToggleActive" asp-route-id="@user.Id"
                                       class="btn btn-sm @(user.IsActive ? "btn-success" : "btn-secondary")"
                                       title="@(user.IsActive ? "Deactivate" : "Activate")">
                                        <i class="fa fa-power-off"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this user? This cannot be undone.');"
                                       title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}