@model Traeq.Models.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
    string badgeClass = "bg-secondary";
    if (Model.OrderStatus == "Pending") { badgeClass = "bg-warning"; }
    else if (Model.OrderStatus == "Accepted") { badgeClass = "bg-info"; }
    else if (Model.OrderStatus == "Ready") { badgeClass = "bg-primary"; }
    else if (Model.OrderStatus == "OutForDelivery") { badgeClass = "bg-primary"; }
    else if (Model.OrderStatus == "Completed") { badgeClass = "bg-success"; }
    else if (Model.OrderStatus == "Rejected") { badgeClass = "bg-danger"; }
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Order #@Model.Id Details</h1>
        <a asp-area="Pharmacy" asp-controller="Orders" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Items Ordered</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Medicine</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Medicine.MedicineName</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>@item.Quantity</td>
                                        <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end font-weight-bold">Total Amount:</td>
                                    <td class="font-weight-bold text-primary">@Model.TotalAmount.ToString("C")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Customer & Status</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Status: </strong>
                        <span class="badge @badgeClass" style="font-size: 1em;">@Model.OrderStatus</span>
                    </div>
                    <div class="mb-3">
                        <strong>Date: </strong> @Model.OrderDate.ToString("g")
                    </div>
                    <div class="mb-3">
                        <strong>Payment: </strong> @Model.PaymentMethod
                    </div>
                    <hr />
                    <h6 class="font-weight-bold">Customer Info</h6>
                    <p class="mb-1"><i class="fas fa-user"></i> @Model.User.FullName</p>
                    <p class="mb-1"><i class="fas fa-phone"></i> @Model.User.PhoneNumber</p>

                    @if (Model.DeliveryMethod == "Delivery")
                    {
                        <hr />
                        <h6 class="font-weight-bold text-info">Shipping Address</h6>
                        <p class="mb-1"><strong>City:</strong> @Model.ShippingCity</p>
                        <p class="mb-1"><strong>District:</strong> @Model.ShippingDistrict</p>
                        <p class="mb-1"><strong>Address:</strong> @Model.ShippingAddressDetails</p>
                        <p class="mb-1"><strong>Phone:</strong> @Model.ShippingPhoneNumber</p>

                        @if (Model.ShippingLatitude != null && Model.ShippingLongitude != null)
                        {
                            <div class="mt-3 p-2 border rounded bg-light">
                                <label class="small fw-bold text-secondary">Customer Location</label>
                                <div id="customerMap" style="height: 180px; width: 100%; border-radius: 5px;"></div>
                                <a href="https://www.google.com/maps/search/?api=1&query=@Model.ShippingLatitude,@Model.ShippingLongitude" target="_blank" class="btn btn-sm btn-outline-primary mt-2 w-100">
                                    <i class="fas fa-map-marker-alt"></i> Open in Google Maps
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <hr />
                        <h6 class="font-weight-bold text-warning">Pickup from Pharmacy</h6>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                </div>
                <div class="card-body">
                    @if (Model.OrderStatus == "Pending")
                    {
                        <form asp-area="Pharmacy" asp-controller="Orders" asp-action="AcceptOrder" method="post" class="mb-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-success btn-block w-100 mb-2">
                                <i class="fas fa-check"></i> Accept Order
                            </button>
                        </form>

                        <button type="button" class="btn btn-danger btn-block w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="fas fa-times"></i> Reject Order
                        </button>
                    }
                    else if (Model.OrderStatus == "Accepted")
                    {
                        <form asp-area="Pharmacy" asp-controller="Orders" asp-action="UpdateStatus" method="post" class="mb-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            @if (Model.DeliveryMethod == "Delivery")
                            {
                                <input type="hidden" name="status" value="OutForDelivery" />
                                <button type="submit" class="btn btn-info btn-block w-100 text-white">
                                    <i class="fas fa-motorcycle"></i> Out For Delivery
                                </button>
                            }
                            else
                            {
                                <input type="hidden" name="status" value="Ready" />
                                <button type="submit" class="btn btn-primary btn-block w-100">
                                    <i class="fas fa-box"></i> Ready for Pickup
                                </button>
                            }
                        </form>
                    }
                    else if (Model.OrderStatus == "Ready" || Model.OrderStatus == "OutForDelivery")
                    {
                        <form asp-area="Pharmacy" asp-controller="Orders" asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="Completed" />
                            <button type="submit" class="btn btn-success btn-block w-100">
                                <i class="fas fa-check-double"></i> Mark as Completed
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center mb-0">
                            No actions available
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-area="Pharmacy" asp-controller="Orders" asp-action="RejectOrder" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group">
                        <label>Rejection Reason (Will be shown to customer)</label>
                        <textarea name="reason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
@if (Model.ShippingLatitude != null && Model.ShippingLongitude != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var lat = @Model.ShippingLatitude;
            var lng = @Model.ShippingLongitude;
            var map = L.map('customerMap').setView([lat, lng], 14);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: 'OpenStreetMap'
            }).addTo(map);
            L.marker([lat, lng]).addTo(map).bindPopup("Customer Location").openPopup();
        });
    </script>
}