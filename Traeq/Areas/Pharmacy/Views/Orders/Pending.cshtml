@model IEnumerable<Traeq.Models.Order>
@{
    ViewData["Title"] = "Pending Orders";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Pending Orders</h1>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <div class="card shadow mb-4">
        <div class="card-header py-3 border-left-warning">
            <h6 class="m-0 font-weight-bold text-warning">New Orders (Need Action)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@item.User.FullName</td>
                                <td>@item.TotalAmount.ToString("C")</td>
                                <td>
                                    @if (item.DeliveryMethod == "Delivery")
                                    {
                                        <span class="badge bg-info">Delivery</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">Pickup</span>
                                    }
                                </td>
                                <td>
                                    <a asp-area="Pharmacy" asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>