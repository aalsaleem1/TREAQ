@model IEnumerable<Traeq.Models.User>

@{
    ViewData["Title"] = "Employee Management";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Staff (Employees)</h1>
        <a asp-action="CreateEmployee" asp-controller="Dashboard" asp-area="Pharmacy" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Employee
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Employees List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 20%">Full Name</th>
                            <th style="width: 15%">Username</th>
                            <th style="width: 20%">Email</th>
                            <th style="width: 30%">Permissions</th>
                            <th style="width: 10%">Status</th>
                            <th style="width: 5%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.FullName</td>
                                    <td>@employee.UserName</td>
                                    <td>@employee.Email</td>
                                    <td>
                                        @if (employee.CanAddMedicine)
                                        {
                                            <span class="badge badge-success">Add</span>
                                        }
                                        @if (employee.CanEditMedicine)
                                        {
                                            <span class="badge badge-warning">Edit</span>
                                        }
                                        @if (employee.CanDeleteMedicine)
                                        {
                                            <span class="badge badge-danger">Delete</span>
                                        }
                                        @if (!employee.CanAddMedicine && !employee.CanEditMedicine && !employee.CanDeleteMedicine)
                                        {
                                            <span class="badge badge-secondary">View Only</span>
                                        }
                                    </td>
                                    <td>
                                        @if (employee.IsActive)
                                        {
                                            <span class="text-success"><i class="fas fa-check-circle"></i> Active</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger"><i class="fas fa-times-circle"></i> Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="DeleteEmployee" asp-route-id="@employee.Id"
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirm('Are you sure you want to delete this employee?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No employees found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>