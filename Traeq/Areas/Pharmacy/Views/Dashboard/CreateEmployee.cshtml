@model Traeq.DTO.EmployeeViewModel

@{
    ViewData["Title"] = "Add New Employee";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Register New Employee</h1>
        <a asp-action="Employees" asp-controller="Dashboard" asp-area="Pharmacy" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Employee Details</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateEmployee" asp-controller="Dashboard" asp-area="Pharmacy" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="FullName" class="control-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" placeholder="Ex: John Doe" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Username" class="control-label">Username (for login)</label>
                                <input asp-for="Username" class="form-control" placeholder="Username" autocomplete="new-password" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email (for contact and login)</label>
                            <input asp-for="Email" class="form-control" placeholder="employee@example.com" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="Password" class="control-label">Password</label>
                                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <hr>
                        <h6 class="font-weight-bold text-dark mb-3">Set Permissions:</h6>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox mb-2">
                                <input asp-for="CanAdd" type="checkbox" class="custom-control-input" id="checkAdd">
                                <label class="custom-control-label" for="checkAdd">Allow adding medicines</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-2">
                                <input asp-for="CanEdit" type="checkbox" class="custom-control-input" id="checkEdit">
                                <label class="custom-control-label" for="checkEdit">Allow editing medicines</label>
                            </div>

                            <div class="custom-control custom-checkbox">
                                <input asp-for="CanDelete" type="checkbox" class="custom-control-input" id="checkDelete">
                                <label class="custom-control-label" for="checkDelete">Allow deleting medicines</label>
                            </div>
                        </div>

                        <hr>
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-save"></i> Create Account
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>