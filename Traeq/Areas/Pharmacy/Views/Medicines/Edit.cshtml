@model Traeq.Areas.Pharmacy.ViewModels.CreateMedicineViewModel
@{
    ViewData["Title"] = "Edit Medicine";
    Layout = "~/Views/Shared/DashBoardLayout.cshtml";

    var backUrl = Url.Action("Index", "Medicines", new { area = "Pharmacy" });
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Medicine</h1>
        <a href="@backUrl" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Medicines" asp-area="Pharmacy" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <div class="mb-3">
                        <label>Current Image</label><br />
                        <img src="~/@Model.ImageURL"
                             style="width:120px;height:120px;object-fit:cover;border-radius:6px;" />
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="MedicineName"></label>
                            <input asp-for="MedicineName" class="form-control" />
                            <span asp-validation-for="MedicineName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ScientificName"></label>
                            <input asp-for="ScientificName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="MedicineImage"></label>
                            <input asp-for="MedicineImage" type="file" class="form-control-file" />
                            <small class="text-muted">Optional - Current image will be replaced</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category"></label>
                            <select asp-for="Category" class="form-control">
                                <option value="">Select Category</option>
                                <option value="Antibiotics">Antibiotics</option>
                                <option value="Painkillers">Painkillers</option>
                                <option value="Anti-inflammatory">Anti-inflammatory</option>
                                <option value="Vitamins">Vitamins</option>
                                <option value="Chronic Diseases">Chronic Diseases</option>
                                <option value="Supplements">Supplements</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Quantity"></label>
                            <input asp-for="Quantity" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ExpiryDate"></label>
                            <input asp-for="ExpiryDate" type="date" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="MedicineDescription"></label>
                            <textarea asp-for="MedicineDescription" class="form-control"></textarea>
                        </div>

                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="@backUrl" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}