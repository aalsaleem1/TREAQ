@model Traeq.DTO.UserDTO
@{
    ViewData["Title"] = "Profile";
    var addresses = ViewBag.Addresses as List<Traeq.Models.UserAddress>;
    double? pharmLat = ViewBag.PharmacyLat;
    double? pharmLng = ViewBag.PharmacyLng;
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<style>
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 60px 0 100px;
        color: white;
        margin-bottom: -50px;
    }

    .profile-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        margin-bottom: 30px;
        border: none;
    }

    .profile-img-container {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        border-radius: 50%;
        border: 5px solid white;
        overflow: hidden;
        background: #fff;
        position: relative;
    }

        .profile-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .nav-pills .nav-link {
        color: #555;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 8px;
    }

        .nav-pills .nav-link.active {
            background-color: #667eea;
            color: white;
            box-shadow: 0 4px 10px rgba(102, 126, 234, 0.3);
        }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #e0e0e0;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    #map {
        height: 400px;
        width: 100%;
        border-radius: 10px;
        border: 2px solid #eee;
    }

    .action-btn {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: all 0.3s;
    }

        .action-btn:hover {
            background-color: #f0f4ff;
            transform: scale(1.1);
        }
</style>

<div class="profile-header text-center">
    <div class="container">
        <h2 class="font-weight-bold">My Profile</h2>
        <p class="opacity-75">Manage your account settings and preferences</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-card text-center p-4">
                <div class="profile-img-container mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="~/@Model.ImageUrl" alt="Profile" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" alt="Profile" />
                    }
                </div>
                <h4 class="mb-1">@Model.FullName</h4>
                <p class="text-muted mb-3">@Model.AccountType</p>
                <hr />

                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active mb-2" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab">
                        <i class="fa fa-cog mr-2"></i> Account Settings
                    </a>

                    @if (Model.AccountType == "Pharmacy")
                    {
                        <a class="nav-link mb-2" id="v-pills-location-tab" data-toggle="pill" href="#v-pills-location" role="tab" onclick="initMap()">
                            <i class="fa fa-map-marker mr-2"></i> Pharmacy Location
                        </a>
                    }
                    else
                    {
                        <a class="nav-link mb-2" id="v-pills-address-tab" data-toggle="pill" href="#v-pills-address" role="tab">
                            <i class="fa fa-address-book mr-2"></i> My Addresses
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="profile-card p-4">
                <div class="tab-content" id="v-pills-tabContent">

                    <div class="tab-pane fade show active" id="v-pills-settings" role="tabpanel">
                        <h4 class="mb-4">Edit Profile</h4>
                        <form id="profileForm" enctype="multipart/form-data">
                            <input type="hidden" name="AccountType" value="@Model.AccountType" />

                            @if (Model.AccountType == "Pharmacy")
                            {
                                <input type="hidden" id="pharmLat" name="Latitude" value="@pharmLat" />
                                <input type="hidden" id="pharmLng" name="Longitude" value="@pharmLng" />
                            }

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="small font-weight-bold">Full Name</label>
                                    <input class="form-control" name="FullName" value="@Model.FullName" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="small font-weight-bold">Phone Number</label>
                                    <input class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="small font-weight-bold">City</label>
                                    <input class="form-control" name="City" value="@Model.City" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="small font-weight-bold">District</label>
                                    <input class="form-control" name="District" value="@Model.District" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="small font-weight-bold">Change Profile Image</label>
                                <input type="file" class="form-control p-1" name="UserFile" />
                            </div>

                            @if (Model.AccountType == "Pharmacy")
                            {
                                <hr />
                                <h5 class="mt-4 mb-3 text-primary">Pharmacy Branding</h5>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Pharmacy Logo</label>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(Model.PharmacyLogoUrl))
                                        {
                                            <img src="~/@Model.PharmacyLogoUrl" width="60" class="mr-3 rounded border" />
                                        }
                                        <input type="file" class="form-control p-1" name="LogoFile" />
                                    </div>
                                </div>
                            }

                            <button type="submit" class="btn btn-primary btn-block py-2 mt-4" style="background: #667eea; border:none;">
                                Save Changes
                            </button>
                        </form>
                    </div>

                    @if (Model.AccountType == "Pharmacy")
                    {
                        <div class="tab-pane fade" id="v-pills-location" role="tabpanel">
                            <h4 class="mb-3">Update Location</h4>
                            <div class="alert alert-info small">
                                Drag the marker to update your pharmacy's location. Changes will be saved when you click "Save Changes" in the Settings tab.
                            </div>
                            <div id="map"></div>
                        </div>
                    }
                    else
                    {
                        <div class="tab-pane fade" id="v-pills-address" role="tabpanel">
                            <h4 class="mb-4">Address History</h4>
                            @if (addresses != null && addresses.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>City</th>
                                                <th>District</th>
                                                <th>Address</th>
                                                <th>Phone</th>
                                                <th>Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var addr in addresses)
                                            {
                                                <tr>
                                                    <td>@addr.City</td>
                                                    <td>@addr.District</td>
                                                    <td>@addr.FullAddress</td>
                                                    <td>@addr.PhoneNumber</td>
                                                    <td>
                                                        <button class="action-btn text-primary border-0 bg-transparent"
                                                                onclick="editAddress(@addr.Id, '@addr.City', '@addr.District', '@addr.FullAddress', '@addr.PhoneNumber')">
                                                            <i class="fa fa-edit"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fa fa-map-signs fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No addresses saved yet.</p>
                                </div>
                            }
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editAddressModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title font-weight-bold">Edit Address</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="editAddressForm">
                <div class="modal-body p-4">
                    <input type="hidden" id="editAddrId" name="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="small font-weight-bold">City</label>
                            <input type="text" class="form-control" id="editCity" name="City" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small font-weight-bold">District</label>
                            <input type="text" class="form-control" id="editDistrict" name="District" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="small font-weight-bold">Full Address</label>
                        <input type="text" class="form-control" id="editFullAddress" name="FullAddress" required />
                    </div>

                    <div class="mb-3">
                        <label class="small font-weight-bold">Phone Number</label>
                        <input type="text" class="form-control" id="editPhone" name="PhoneNumber" required />
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" style="background: #667eea; border:none;">Update Address</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    var map;
    var marker;

    function initMap() {
        if (map) {
            setTimeout(function(){ map.invalidateSize(); }, 200);
            return;
        }

        var latVal = $('#pharmLat').val();
        var lngVal = $('#pharmLng').val();

        var defaultLat = 31.9539;
        var defaultLng = 35.9106;
        var isDefault = !latVal || !lngVal;

        var lat = parseFloat(latVal) || defaultLat;
        var lng = parseFloat(lngVal) || defaultLng;

        map = L.map('map').setView([lat, lng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'OpenStreetMap'
        }).addTo(map);

        marker = L.marker([lat, lng], { draggable: true }).addTo(map);

        if (isDefault && navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                var userLat = position.coords.latitude;
                var userLng = position.coords.longitude;

                map.setView([userLat, userLng], 15);
                marker.setLatLng([userLat, userLng]);

                $('#pharmLat').val(userLat);
                $('#pharmLng').val(userLng);
            });
        }

        marker.on('dragend', function(e) {
            var position = marker.getLatLng();
            $('#pharmLat').val(position.lat);
            $('#pharmLng').val(position.lng);
        });

        map.on('click', function(e) {
            marker.setLatLng(e.latlng);
            $('#pharmLat').val(e.latlng.lat);
            $('#pharmLng').val(e.latlng.lng);
        });

        setTimeout(function(){ map.invalidateSize(); }, 300);
    }

    $('#profileForm').submit(function (e) {
        e.preventDefault();
        var formData = new FormData(this);

        $.ajax({
            url: '/User/ProfileEdit',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                Swal.fire({
                    title: 'Success',
                    text: 'Profile updated successfully',
                    icon: 'success',
                    confirmButtonColor: '#667eea'
                }).then(() => location.reload());
            },
            error: function() {
                Swal.fire('Error', 'Something went wrong', 'error');
            }
        });
    });

    function editAddress(id, city, district, address, phone) {
        $('#editAddrId').val(id);
        $('#editCity').val(city);
        $('#editDistrict').val(district);
        $('#editFullAddress').val(address);
        $('#editPhone').val(phone);
        $('#editAddressModal').modal('show');
    }

    $('#editAddressForm').submit(function(e) {
        e.preventDefault();
        var formData = new FormData(this);

        $.ajax({
            url: '/User/EditAddress',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                $('#editAddressModal').modal('hide');
                Swal.fire({
                    title: 'Updated',
                    text: 'Address updated successfully',
                    icon: 'success',
                    confirmButtonColor: '#667eea'
                }).then(() => location.reload());
            },
            error: function() {
                Swal.fire('Error', 'Failed to update address', 'error');
            }
        });
    });

    $('a[data-toggle="pill"]').on('shown.bs.tab', function (e) {
        if(e.target.id === 'v-pills-location-tab') {
            initMap();
        }
    });
</script>