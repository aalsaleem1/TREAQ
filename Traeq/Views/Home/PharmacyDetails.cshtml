@model Traeq.DTO.PharmacyDetailsViewModel
@{
    ViewData["Title"] = Model.PharmacyName ?? "Pharmacy Details";

    var now = DateTime.Now;
    var activePromos = Model.PromoCodes?
        .Where(p => p.IsActive && now >= p.StartDateTime && now <= p.EndDateTime)
        .OrderByDescending(p => p.StartDateTime)
        .ToList() ?? new List<Traeq.Models.PharmacyPromoCode>();
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a asp-action="Index" asp-controller="Home">Home</a>
                <span class="mx-2">/</span>
                <strong class="text-black">@Model.PharmacyName</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-4 text-center">
                <img src="~/@Model.PharmacyLogoUrl" alt="@Model.PharmacyName" class="img-fluid mb-2 rounded-circle" style="width:150px; height:150px; object-fit:cover; border: 2px solid #ddd;">
            </div>
            <div class="col-md-8">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h2 class="text-black">@Model.PharmacyName</h2>
                        @if (!string.IsNullOrEmpty(Model.OwnerName))
                        {
                            <p class="mb-1"><strong>Owner:</strong> @Model.OwnerName</p>
                        }

                        @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                        {
                            <a class="btn btn-sm btn-outline-primary mt-2"
                               target="_blank"
                               href="https://www.google.com/maps?q=@Model.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture),@Model.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)">
                                <i class="fa fa-map-marker-alt me-1"></i> Pharmacy Location
                            </a>
                        }
                    </div>

                    <div class="text-end">
                        <button class="btn btn-outline-success btn-sm"
                                type="button"
                                onclick="togglePromos()">
                            View Promo Codes
                        </button>
                    </div>
                </div>

                <div class="mt-3" id="pharmacy-promos" style="display:none;">
                    <div class="card card-body border-0 shadow-sm">
                        @if (activePromos.Any())
                        {
                            <h6 class="text-primary mb-3">Available Promo Codes</h6>
                            <div class="list-group">
                                @foreach (var p in activePromos)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="badge bg-success me-2">CODE</span>
                                            <strong>@p.Code</strong>
                                            <span class="text-muted ms-2">@p.DiscountPercent% off</span>
                                        </div>
                                        <small class="text-muted">
                                            Valid until @p.EndDateTime.ToString("yyyy-MM-dd HH:mm")
                                        </small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mb-0">
                                There are no active promo codes for this pharmacy at the moment.
                            </div>
                        }
                    </div>
                </div>

                <hr>
                <h5 class="text-primary mt-3">Select a Category</h5>
            </div>
        </div>

        <div class="row">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                foreach (var cat in Model.Categories)
                {
                    <div class="col-md-4 col-lg-3 mb-4">
                        <a asp-action="PharmacyMedicines"
                           asp-controller="Home"
                           asp-area=""
                           asp-route-pharmacyId="@Model.Id"
                           asp-route-category="@cat"
                           class="text-decoration-none">

                            <div class="card h-100 shadow-sm border-0 text-center py-4 hover-card">
                                <div class="card-body">
                                    <div class="mb-3 text-primary">
                                        <i class="fa fa-folder-open fa-3x"></i>
                                    </div>
                                    <h5 class="card-title text-dark font-weight-bold">@cat</h5>
                                    <span class="btn btn-outline-primary btn-sm mt-2 rounded-pill px-4">Browse Medicines</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <div class="alert alert-info">
                        No medicine categories found in this pharmacy.
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>

@section Scripts {
    <script>
        function togglePromos() {
            var el = document.getElementById('pharmacy-promos');
            if (!el) return;
            if (el.style.display === 'none' || el.style.display === '') {
                el.style.display = 'block';
            } else {
                el.style.display = 'none';
            }
        }
    </script>
}
