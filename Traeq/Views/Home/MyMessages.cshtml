@model Traeq.Models.UserMessagesViewModel

@{
    ViewData["Title"] = "My Messages";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a asp-action="Index" asp-controller="Home" asp-area="">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">My Messages</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <h3 class="mb-4 text-black">Order Support (Admin)</h3>

        <div class="table-responsive mb-5">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Created</th>
                        <th>Order #</th>
                        <th>Status</th>
                        <th>Last Activity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.AdminThreads != null && Model.AdminThreads.Any())
                    {
                        foreach (var t in Model.AdminThreads)
                        {
                            var lastMsg = t.Messages?.OrderByDescending(m => m.SentAt).FirstOrDefault();
                            <tr>
                                <td>@t.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@t.OrderId</td>
                                <td>
                                    @if (t.IsClosed)
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Open</span>
                                    }
                                </td>
                                <td>@(lastMsg != null ? lastMsg.SentAt.ToString("yyyy-MM-dd HH:mm") : "-")</td>
                                <td>
                                    <a asp-area="" asp-controller="Home" asp-action="OrderSupportChat" asp-route-threadId="@t.Id"
                                       class="btn btn-sm @(t.IsClosed ? "btn-outline-secondary" : "btn-primary")">
                                        @(t.IsClosed ? "View" : "Continue")
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                You have no admin support messages yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h3 class="mb-4 text-black">Pharmacy Support</h3>

        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Created</th>
                        <th>Pharmacy</th>
                        <th>Order #</th>
                        <th>Status</th>
                        <th>Last Activity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.PharmacyThreads != null && Model.PharmacyThreads.Any())
                    {
                        foreach (var t in Model.PharmacyThreads)
                        {
                            var lastMsg = t.Messages?.OrderByDescending(m => m.SentAt).FirstOrDefault();
                            <tr>
                                <td>@t.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@t.Pharmacy?.PharmacyName</td>
                                <td>@(t.OrderId.HasValue? t.OrderId.ToString() : "-")</td>
                                <td>
                                    @if (t.IsClosed)
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Open</span>
                                    }
                                </td>
                                <td>@(lastMsg != null ? lastMsg.SentAt.ToString("yyyy-MM-dd HH:mm") : "-")</td>
                                <td>
                                    <a asp-area="" asp-controller="Home" asp-action="PharmacySupportChat" asp-route-threadId="@t.Id"
                                       class="btn btn-sm @(t.IsClosed ? "btn-outline-secondary" : "btn-primary")">
                                        @(t.IsClosed ? "View" : "Continue")
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                You have no pharmacy support messages yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
