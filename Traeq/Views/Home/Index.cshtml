@model Traeq.DTO.HomeDTO
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section position-relative" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); padding: 100px 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-dark mb-3">Your Health, <br> <span class="text-primary">Our Priority</span></h1>
                <p class="lead text-muted mb-4">Find the nearest pharmacies, browse medicines, and get what you need delivered to your doorstep with TREAQ.</p>
                <div class="d-flex gap-3">
                    <a asp-action="ShopNowRedirect" asp-controller="Home" asp-area="" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">Shop Now</a>
                    <a asp-action="AboutUs" asp-controller="Home" asp-area="" class="btn btn-outline-dark btn-lg rounded-pill px-5">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block text-end">
                <img src="~/Asset/images/homepic.jpg" alt="TREAQ Hero" class="img-fluid rounded-3 shadow-lg" style="width: 100%; max-height: 500px; object-fit: cover;">
            </div>
        </div>
    </div>
</div>

<div id="pharmacies-section" class="site-section py-5 bg-white">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <span class="text-primary fw-bold text-uppercase small ls-2">Partners</span>
                <h2 class="fw-bold mt-2">Our Trusted Pharmacies</h2>
                <div class="mx-auto bg-primary mt-3" style="width: 60px; height: 3px;"></div>
            </div>
        </div>

        <div class="row">
            @if (Model.PharmacyLegalInfoList != null && Model.PharmacyLegalInfoList.Any())
            {
                @foreach (var ph in Model.PharmacyLegalInfoList)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-0 shadow-sm hover-card transition-all">
                            <div class="card-body text-center p-4">
                                <div class="mb-3 position-relative d-inline-block">
                                    @if (!string.IsNullOrEmpty(ph.PharmacyLogoUrl))
                                    {
                                        <img src="~/@ph.PharmacyLogoUrl" alt="@ph.PharmacyName" class="rounded-circle shadow-sm border p-1" style="width: 100px; height: 100px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img src="https://via.placeholder.com/100" alt="@ph.PharmacyName" class="rounded-circle shadow-sm border p-1">
                                    }
                                </div>
                                <h4 class="card-title fw-bold mb-1">@ph.PharmacyName</h4>
                                <p class="text-muted small mb-3"><i class="fas fa-map-marker-alt me-1"></i> @ph.User?.City</p>
                                <a asp-action="PharmacyDetails" asp-controller="Home" asp-area="" asp-route-id="@ph.Id" class="btn btn-outline-primary btn-sm rounded-pill px-4">Visit Pharmacy</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">No pharmacies available at the moment.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .ls-2 {
        letter-spacing: 2px;
    }
</style>